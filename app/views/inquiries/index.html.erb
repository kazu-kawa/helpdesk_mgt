<h1><%= t('views.inquiries_list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.inquiry.accepted_datetime') %></th>
      <th><%= t('activerecord.attributes.inquiry.inquired_person') %></th>
      <th><%= t('activerecord.attributes.inquiry.contents') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.accepted_datetime %></td>
        <td><%= inquiry.inquired_person %></td>
        <td><%= inquiry.contents %></td>
        <td><%= link_to t('views.show'), inquiry %></td>
        <td><%= link_to t('views.edit'), edit_inquiry_path(inquiry) %></td>
        <td><%= link_to t('views.destroy'), inquiry, method: :delete, data: { confirm: t('messages.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

