<h1><%= t('views.responses_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.response.responced_datetime') %></th>
      <th><%= t('activerecord.attributes.response.user_id') %></th>
      <th><%= t('activerecord.attributes.response.contents') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.responced_datetime %></td>
        <td><%= response.user %></td>
        <td><%= response.contents %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Edit', edit_response_path(response) %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_response_path %>
